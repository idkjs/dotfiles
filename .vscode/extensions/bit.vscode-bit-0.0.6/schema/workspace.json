{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "allOf": [
    { "$ref": "./abstract.json" },
    {
      "type": "object",
      "properties": {
        "propagate": {
          "type": "boolean"
        },
        "saveDependenciesAsComponents": {
          "type": "boolean"
        },
        "lang": {
          "type": "string"
        },
        "dist": {
          "type": "object",
          "properties": {
            "entry": {
              "type": "string"
            },
            "target": {
              "type": "string"
            }
          }
        },
        "componentsDefaultDirectory": {
          "type": "string"
        },
        "dependenciesDirectory": {
          "type": "string"
        },
        "ejectedEnvsDirectory": {
          "type": "string"
        },
        "bindingPrefix": {
          "type": "string"
        },
        "packageJsonObject": {
          "type": "string"
        },
        "packageManager": {
          "type": "string",
          "items": {
            "enum": ["npm", "yarn"]
          },
          "default": "npm"
        },
        "packageManagerArgs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "packageManagerProcessOptions": {
          "type": "object"
        },
        "useWorkspaces": {
          "type": "boolean"
        },
        "manageWorkspaces": {
          "type": "boolean"
        },
        "resolveModules": {
          "type": "object",
          "properties": {
            "modulesDirectories": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "aliases": {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "type": "string"
                }
              }
            }
          }
        },
        "overrides": {
          "$ref": "./overrides.json"
        },
        "extensions": {
          "$ref": "./extensions.json"
        },
        "env": {
          "$ref": "./env.json"
        },
        "defaultScope": {
          "title": "The default scope for exporting components",
          "description": "Set the default scope when there is no matching in the export command. Format: <owner>.<collection>",
          "type": "string"
        }
      }
    }
  ]
}
