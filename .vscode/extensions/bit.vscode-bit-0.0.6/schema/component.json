{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "allOf": [
    { "$ref": "./abstract.json" },
    {
      "properties": {
        "lang": {
          "type": "string"
        },
        "packageJsonFile": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "bindingPrefix": {
          "type": "string"
        },
        "extensions": {
          "$ref": "./extensions.json"
        },
        "env": {
          "type": "object",
          "$ref": "./env.json"
        },
        "overrides": {
          "$ref": "./overrides.json"
        }
      }
    }
  ]
}
