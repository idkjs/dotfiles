{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
      "compiler": {
        "anyOf": [
          { "$ref": "#/definitions/environment" },
          { "type": "string" }
        ]
      },
      "tester": {
        "anyOf": [
          { "$ref": "#/definitions/environment" },
          { "type": "string" }
        ]
      }
  },
  "definitions": {
    "environment": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "options": {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string"
                }
              }
            },
            "files": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "config": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
