{
	"name": "vscode-bit",
	"displayName": "Bit",
	"description": "VSCode extension for Bit.",
	"publisher": "bit",
	"repository": {
		"url": "https://github.com/teambit/vscode-bit"
	},
	"icon": "icon.png",
	"version": "0.0.6",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bit.openInBrowser",
				"title": "Bit: Open in browser"
			},
			{
				"command": "bit.generateDebuggerOption",
				"title": "Bit: Generate files in .vscode folder to allow debuging of node_modules"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "/*/**/bit.json",
				"url": "./schema/component.json"
			},
			{
				"fileMatch": "/*/**/package.json",
				"url": "./schema/package/component.json"
			},
			{
				"fileMatch": "bit.json",
				"url": "./schema/workspace.json"
			},
			{
				"fileMatch": "package.json",
				"url": "./schema/package/workspace.json"
			},
			{
				"fileMatch": "workspace.jsonc",
				"url": "./src/schema/workspace.json"
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"ajv": "^6.10.2",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	},
	"__metadata": {
		"id": "c39988ef-818c-414a-b08c-107fccf37edf",
		"publisherId": "3383b349-2596-4998-9ef8-0a1d01f5356d",
		"publisherDisplayName": "Bit"
	}
}